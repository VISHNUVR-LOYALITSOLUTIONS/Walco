<record id="base_document_layout_inherit_form" model="ir.ui.view">
	<field name="name">base.document.layout.inherit.form</field>
	<field name="model">base.document.layout</field>
	<field name="inherit_id" ref="base.view_base_document_layout" />
	<field name="arch" type="xml">
		<xpath expr="//field[@name='logo']" position="after">
			<field name="company_watermark" widget="image" force_save="1"/>
		</xpath>
		<xpath expr="//button[@class='btn btn-link']" position="after">
<!--			<label for="rpt_primary_color" string="Report Colors"/>-->
