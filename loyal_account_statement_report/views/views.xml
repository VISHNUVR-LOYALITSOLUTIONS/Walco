<odoo>
    <data>
        <record id="account_statement_report_wizard_view" model="ir.ui.view">
            <field name="name">Partner Statement Report Wizard</field>
            <field name="model">account.statement.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group >
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="partner_id"/>
                        </group>
                         <group >
                            <field name="filter_account_type" widget="radio" />
                            <field name="state" widget="radio"/>
                            <field name="company_id"   domain="[('id','in',allowed_company_ids)]" groups="base.group_multi_company" />
                             <field name="user_id" invisible="1"/>
                            <field name="allowed_company_ids" invisible="1"/>

                        </group>
                    </group>

                    <footer>
<!--                        <button name="export_xls" type="object" default_focus="1"-->
<!--                                string="Excel Print" class="oe_highlight"/>-->
<!--                        or-->
                        <button name="check_report" string="PDF Print" type="object"
                                class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="account_statement_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Partner Statement Report</field>
            <field name="res_model">account.statement.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_statement_report_wizard_view"/>
            <field name="target">new</field>
        </record>
        <menuitem id="account_statement_report_wizard_menu" name="Partner Statement Report" groups="loyal_account_statement_report.usergroup_account_statement_report"
                  parent="account.menu_finance_reports" action="account_statement_report_wizard_action"/>


        <report
                id="action_account_statement_report_xls"
                model="account.move.line"
                string="Partner Statement Report XLSX"
                report_type="xlsx"
                name="loyal_account_statement_report.statement_report_xls"
                file="loyal_account_statement_report.statement_report_xls"

        />
        <report
                id="action_account_statement_report_pdf"
                model="account.move.line"
                string="Partner Statement Report"
                report_type="qweb-pdf"
                name="loyal_account_statement_report.statement_report_pdf"
                file="loyal_account_statement_report.statement_report_pdf"
                menu="False"
        />

<!--          <record id="action_account_statement_report_pdf" model="ir.actions.report">-->
<!--              <field name="pdf_watermark" type="base64" file="account_statement_report/static/description/src/img/page.jpg"/>-->
<!--        </record>-->


    </data>
</odoo>
