<odoo>
    <data>
        <record id="print_settings_res_company_inherited_form_view" model="ir.ui.view">
            <field name="name">print.settings.res.company.form.view</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Print Settings">
                        <group>
                            <group>
                                <field name="print_header_img" widget="image" class="float-left oe_avatar"/>
                                <field name="print_footer_img" widget="image" class="float-left oe_avatar"/>
                            </group>
                            <group>
                                <field name="pdf_watermark" widget="image" class="float-left oe_avatar"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


    </data>
</odoo>