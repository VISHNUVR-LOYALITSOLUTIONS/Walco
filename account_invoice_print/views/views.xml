    />


                <record id="paperformat_walco_invoice_print" model="report.paperformat">
            <field name="name">INVOICE PRINT</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">90</field>
            <field name="margin_bottom">65</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">60</field>
            <field name="dpi">90</field>
        </record>




        <record id="walco_invoice_order_print" model="ir.actions.report">
            <field name="pdf_watermark" type="base64" file="account_invoice_print/static/description/src/img/header___footer-1.jpg"/>
                        <field name="paperformat_id" ref="account_invoice_print.paperformat_walco_invoice_print"/>

<!--            file="purchase_order_print/static/description/src/img/header1.jpeg"-->
        </record>


